using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;

namespace CalculatriceAPI.Services.Impl
{
    using DTO;
    public class OperationStandardService : OperationService
    {
        private static List<OperationDTO> utilisateurs = new List<OperationDTO>();
        public IEnumerable<OperationDTO> TrouverTout()
        {
            return utilisateurs.Where(u => u != null);
        }
        public OperationDTO TrouverUnUtilisateur(int id)
        {
            return utilisateurs[id];
        }
        public OperationDTO AjouterUn(OperationDTO user)
        {
            user.Id = utilisateurs.Count();
            utilisateurs.Add(user);
            return user;
        }
        public OperationDTO Modifier(int id, OperationDTO user)
        {
            user.Id = id;
            utilisateurs[id] = user;
            return user;
        }
        public void SupprimerUtilisateur(int id)
        {
            utilisateurs[id] = null;
        }
    }
}
